
   <% if @event %>
    <% if @event.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
      
      <ul>
        <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
    </div>
   <% end %>
  <%= form_tag url_for(action: 'create'), method: "post" do %>
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <%= label_tag 'Beginning of the event' %><br />
      <%= datetime_field_tag 'start_date', Time.now.strftime("%d-%m-%Y %H:%M") , class:"form-control"%>
    </div>
    <div class="col-md-4 mb-3">
      <%= label_tag 'Duration' %>
      <%= number_field_tag 'duration',nil, class:"form-control"%>
    </div>
    <div class="col-md-4 mb-3">
      <%= label_tag 'Title' %>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupPrepend2">@</span>
        </div>
        <%= text_field_tag 'title', nil, class:"form-control" %>
      </div>
    </div>
    <div class="col-md-5 mb-3">
      <%= label_tag 'Description' %>
      <%= text_area_tag'description', nil, class:"form-control" %>
    </div>
    <div class="col-md-3 mb-3">
      <br/>
      <%= label_tag 'Price' %>
      <%= text_field_tag'price', nil, class:"form-control" %>
    </div>
    <div class="col-md-3 mb-3">
      <br/>
      <%= label_tag 'Location' %>
      <%= text_field_tag'location', nil, class:"form-control" %>
    </div>
  </div>
  <%= submit_tag  "Create event", class: "btn btn-outline-success" %>
  <% end %>
